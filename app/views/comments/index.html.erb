<p id="notice"><%= notice %></p>

<h1>Reviews</h1>
<h5><button type="button" class="create"><%= link_to 'New Review', new_comment_path %></button></h5>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Rate</th>
      <th>Description</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.title %></td>
        <td><%= comment.rate %></td>
        <td><%= comment.description %></td>
        <td><%= comment.book_id %></td>
        <td><button type="button" class="details"><%= link_to 'Details', comment %></button></td>
        <td><button type="button" class="update"><%= link_to 'Update', edit_comment_path(comment) %></button></td>
        <td><button type="button" class="delete"><%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


